<p id="notice"><%= notice %></p>

<h1>Freshest Eggs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Game</th>
      <th>Difficulty Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @eggs.each do |egg| %>
      <tr>
        <td><%= egg.title %></td>
        <td><%= egg.game %></td>
        <td><%= egg.diffRating %></td>
        <td><%= link_to 'Show', egg %></td>
        <td><%= link_to 'Edit', edit_egg_path(egg) %></td>
        <td><%= link_to 'Destroy', egg, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Egg', new_egg_path %>
